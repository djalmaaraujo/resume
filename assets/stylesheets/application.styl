// Imports
@import 'utils';

main {
  center(1100px);
}

// Header
header {
  text-align: center;
  color: white;
  padding: 20px 0 40px 0;

  h1 {
    margin: 0;
    letter-spacing: -2px;
    word-spacing: 10px;
  }

  p {
    background: gray;
    color: #b0a9a9;
    text-align: center;
    display: inline-block;
    padding: 10px 20px;
    font-size: 12px;
  }

  @media (max-width: $small-bp) {
    padding-bottom: 20px;
  }
}

.content-item {
  border-bottom: 1px dotted darken(gray, 10%);
  padding: 20px 0;
  display: block;

  &:last-child {
    border-bottom: none;
  }
}

.content-time {
  display: inline-block;
  font-style: italic !important;
  margin-left: 5px;
  font-size: 12px;
  color: gray-txt;
  font-family: 'Lora', serif;

  span {
    font-size: inherit;
    color: inherit;
    font-weight: normal;
  }

  @media (max-width: $small-bp) {
    stack();
    margin-bottom: 10px;
    display: block;
  }
}

.quote {
  font-size: 12px;
}

.container {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.wrapper {
  padding: 0;
  min-height: 80px;
  display: block;
  color: gray-txt;
  margin-bottom: 40px;

  @media (max-width: $small-bp) {
    margin-bottom: 10px;
  }
}

.wrapper-middle {
  width: 45%;
}

.wrapper-companies {
  p, h2, h3, h4, ul {
    text-align: right;
  }
  ul {
    list-style-type: none;
  }
}

.header {
  col(4/12);
  text-align: left;

  h2 {
    margin-bottom: 10px;
  }

  small {
    font-size: .7em;
  }

  @media (max-width: $small-bp) {
    stack();
    padding-left: 20px;

    h2 {
      margin-bottom: 0;
    }
  }
}

.content {
  col(8/12);

  h3 {
    margin-bottom: 0;
    font-size: 18px;

    a {
      text-decoration: none;
    }
  }

  h4 {
    margin-bottom: 20px;
    color: darken(gray-txt, 20%);
  }

  h5 {
    margin-bottom: 20px;
  }

  p, ul {
    font-size: 14px;
  }

  @media (max-width: $small-bp) {
    col(12/12);
    padding: 10px 20px;

    h3 {
      font-size: 16px;
    }

    h4 {
      font-size: 14px;
    }
  }
}

.my-talks {
  @media (max-width: $small-bp) {
    text-align: center;
  }

  h2 {
    margin-bottom: 20px;
  }
}

.talk {
  span(1/4);
  min-height: 250px;

  h4 {
    width: 90%;
  }

  @media (max-width: $small-bp) {
    display: none;
  }
}

.talks-for-print {
  display: none;
  margin-top: 40px;
  margin-bottom: 40px;

  ul {
    list-style-type: none;
  }

  @media (max-width: $small-bp) {
    display: block;
  }

  h4 {
    margin: 20px 0 0 0;
  }

  span {
    font-style: italic;
    font-size: 12px;
  }
}

.my-talks-screen {
  display: block;
  clear: both;

  @media (max-width: $small-bp) {
    display: none;
  }
}

.my-skills {
  border-top: 1px solid darken(gray, 5%);
  padding-top: 30px;
  clear: both;

  @media (max-width: $small-bp) {
    border: none;
    padding-top: 0;
  }

  .header {
    col(3/12);

    @media (max-width: $small-bp) {
      stack();
    }
  }

  .content {
    col(9/12);

    @media (max-width: $small-bp) {
      col(12/12);
    }
  }
}

.skill-set {
  col(1/2);

  h3 {
    line-height: 40px;
  }
}

footer {
  text-align: center;
  font-size: 12px;
  display: block;
  padding: 30px 0;
  color: gray-txt;

  @media all and (max-width: $small-bp) {
    line-height: 40px;
  }
}

#social {
  position: fixed;
  right: 0;
  top: 40%;
  list-style-type: none;

  h3 {
    line-height: 50px;
  }

  li a {
    display: block;
    color: white;
    width: 70px;
    height: 70px;
    text-decoration: none;
    font-weight: bold;
    text-align: center;
    line-height: 70px;
    font-family: 'Montserrat', sans-serif;

    span {
      display: none;
    }
  }

  @media (max-width: $small-bp) {
    position: static;
    text-align: center;
    padding-bottom: 20px;
    width: 100%;
    min-height: 140px;

    li, a {
      display: inline-block;
      width: 50%;
      float: left;
    }

    li a {
      width: 100%;
      font-size: 10px;
      font-weight: normal;
      padding: 0 10px;

      span {
        display: inline;
      }
    }
  }
}

.facebook {
  background: #3b5998;
}
.github {
  background: #444;
}
.tumblr {
  background: #32506d;
}
.twitter {
  background: #00aced;
}

.github-projects {
  background: gray;
  padding: 20px;
}

.education {
  .content {
    padding-bottom: 0;
  }

  .content-item {
    padding-bottom: 0;
  }
}
